# Author: QuanTuanHuy
# Description: Part of Serp Project - Environment Variables Template

# Server Configuration
HOST=0.0.0.0
PORT=8087
ENVIRONMENT=development
DEBUG=true

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=serp_llm
DB_USER=serp
DB_PASSWORD=serp
DATABASE_URL=postgresql+asyncpg://serp:serp@localhost:5432/serp_llm

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=2
REDIS_PASSWORD=
REDIS_TTL=3600

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_GROUP_ID=serp_llm_group
KAFKA_AUTO_OFFSET_RESET=earliest

# Gemini Configuration (via OpenAI-compatible API)
OPENAI_API_KEY=your-gemini-api-key-here
OPENAI_ORG_ID=
OPENAI_BASE_URL=https://generativelanguage.googleapis.com/v1beta/openai/

# LLM Defaults (Gemini models)
# Available models: gemini-2.0-flash, gemini-2.0-flash-exp, gemini-2.5-pro, gemini-2.5-flash
DEFAULT_MODEL=gemini-2.0-flash
DEFAULT_MAX_TOKENS=8192
DEFAULT_TEMPERATURE=0.7
EMBEDDING_MODEL=text-embedding-004
EMBEDDING_DIMENSION=768

# Keycloak Configuration (for JWT validation)
KEYCLOAK_SERVER_URL=http://localhost:8180
KEYCLOAK_REALM=serp
KEYCLOAK_CLIENT_ID=serp-llm
KEYCLOAK_CLIENT_SECRET=your-client-secret

# Service URLs (for context building)
ACCOUNT_SERVICE_URL=http://localhost:8081
CRM_SERVICE_URL=http://localhost:8086
PTM_TASK_SERVICE_URL=http://localhost:8083
PTM_SCHEDULE_SERVICE_URL=http://localhost:8084

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
